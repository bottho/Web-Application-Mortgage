@model CentumWebApplication.Models.FormQualifiers

<div class="form-group col-sm-6">
    @Html.LabelFor(m => m.purposeOfLoan)
    @Html.DropDownListFor(m => m.purposeOfLoan, Model.loanPurposes, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.purposeOfLoan, null, new { @class = "help-block" })
</div>

<div class="form-group col-sm-6">
    @Html.LabelFor(m => m.mortgageAmount)
    @Html.EditorFor(m => m.mortgageAmount, new { htmlattributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.mortgageAmount, null, new { @class = "help-block" })
</div>

<div class="form-group col-sm-6">

    @Html.LabelFor(m => m.addCoApplicant)
    <div class="radio">
        <label>@Html.RadioButtonFor(m => m.addCoApplicant, true, new { onchange = "changeCoApplicant(true)" }) Yes</label>
    </div>
    <div class="radio">
        <label>@Html.RadioButtonFor(m => m.addCoApplicant, false, new { onchange = "changeCoApplicant(false)" }) No</label>
    </div>
    @Html.ValidationMessageFor(m => m.addCoApplicant, null, new { @class = "help-block" })
</div>

<div class="form-group col-sm-6">
    @Html.LabelFor(m => m.dateFundsRequired)
    <div class="input-group date">
        @Html.EditorFor(m => m.dateFundsRequired, new { htmlattributes = new { @class = "form-control", required = "required" } })
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
    @Html.ValidationMessageFor(m => m.dateFundsRequired, null, new { @class = "help-block" })
</div>