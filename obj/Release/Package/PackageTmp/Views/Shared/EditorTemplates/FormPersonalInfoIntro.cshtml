@Html.HiddenFor(m => m.language)

<div class="form-group col-sm-4">
    @Html.LabelFor(m => m.title)
    @if (applicant)
    {
        @Html.DropDownListFor(m => m.title, Model.titleTypes, new { @class = "form-control", required = "required", data_val = "true", data_required = "true", min = "0" })
    }
    else
    {
        @Html.DropDownListFor(m => m.title, Model.titleTypes, new { @class = "form-control" })
    }
    @Html.ValidationMessageFor(m => m.title, null, new { @class = "help-block" })
</div>
<div class="form-group col-sm-4">
    @Html.LabelFor(m => m.firstName)
    @if (applicant)
    {
        @Html.EditorFor(m => m.firstName, new { htmlattributes = new { @class = "form-control", required = "required" } })
    }
    else
    {
        @Html.EditorFor(m => m.firstName, new { htmlattributes = new { @class = "form-control" } })
    }
    @Html.ValidationMessageFor(m => m.firstName, null, new { @class = "help-block" })
</div>

